<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mascotas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MascotasFavoritas"
            android:label="Mis mascotas favoritas"
            android:parentActivityName=".ListaMascotas" />
        <activity
            android:name=".ListaMascotas"
            android:label="Lista de mascotas"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Acercade"
            android:label="Acerca De"
            android:parentActivityName=".ListaMascotas" />
        <activity
            android:name=".Contacto"
            android:label="@string/Contacto"
            android:parentActivityName=".ListaMascotas" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>